<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery.min.css"></script>
    <script src="js/popper.min.js"></script>
    <title>Teacher's Data</title>
</head>
<body>
    <div class="container">
            <h1>Teacher's Registration page</h1>

            <form action="addTeacherData" method="POST" class="form-row">
                <div class="form-group col-md-6">
                    <label for="fname">Please enter teacher's full name </label>
                    <input type="text" name="fname" class="form-control" placeholder="First name">
                </div>

                <div class="form-group col-md-6">
                    <label for="classId">Select Class</label>
                    <select name="classId" class="form-control">
                        <%classData.forEach((item) => { %>
                        <option value="default">Select Class</option>
                        <option value="<%= item.id %>"><%= item.class %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label for="dob">Please enter teacher's Date of Brith</label>
                    <input type="text" name="dob" class="form-control" placeholder="Date of Brith">
                </div>

                <div class="form-group col-md-6">
                    <label for="gender">Select Gender</label>
                    <select name="gender" class="form-control">
                        <option value="default">Select Gender Here</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label for="jdate">Please enter address of student's  </label>
                    <input type="text" name="jdate" class="form-control" placeholder="Joining Date">
                </div>
    
                <div class="form-group">
                    <input type="submit" value="Add Teacher" class="btn btn-primary">
                </div>
            </form>
    </div>
</body>
</html>