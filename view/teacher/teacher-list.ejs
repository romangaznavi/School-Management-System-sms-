
    <% include ../layout/header %>
    <% include ../layout/top-menu %>
    <% include ../layout/side-menu %>
    <section class="main">
        <h4>List of Teacherss
            <a href="/addClass" class="btn btn-primary" id="btn1">Add Teacher</a>
        </h4>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th> Class </th>
                    <th> Date of Birth</th>
                    <th> Gender</th>
                    <th>Joining Date</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <%teacherListData.forEach((item) => { %>
                <tr>
                    <td><%=item.fullName%></td>
                    <td><%=item.className%></td>
                    <td><%=item.dob%></td>
                    <td><%=item.gender%></td>
                    <td><%=item.joiningDate%></td>
                    <td><a href="/getTeacherById/<%= item.id %>">Edit</a></td>
                    <td><a href="/viewTeacher/<%= item.id %>">View</a></td>
                    <td><a href="/deleteTeacher/<%= item.id %>" onclick="return confirm('Are you sure')";>Delete</a></td>
                </tr>
                <% }) %>
            </tbody>
        </div>
        </table>

        <nav aria-label="page navigation example">
                <ul class="pagination">
                    <% for(let i=1; i<= totalPages; i ++) { %>
                        <% if(i==1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/teacherList?page=<%=i%>">First</a>
                            </li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="/teacherList?page=<%=i%>"><%=i%></a>
                            </li>
                            <% if (i==totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/teacherList?page=<%=i%>">Last</a>
                                </li>
                            <% } %>
                        <% } %>
                </ul>
            </nav>
    </section>
    <% include ../layout/footer %>        
