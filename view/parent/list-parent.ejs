<% include ../layout/header %>
    
        <% include ../layout/top-menu%>
        <% include ../layout/side-menu%>
        <section class="main">
        <h1 style="text-align: center;">List of Parents</h1>
        <!-- <a href="/add" class="btn btn-primary">Add Student</a> -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Father Name</th>
                    <th>Mother Name</th>
                    <th>Father Mobile #</th>
                    <th>Mother Mobile #</th>
                    <th>Address</th>
                    <th>Note</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <% parentData.forEach((item) => { %>
                <tr>
                    <td><%=item.name%></td>
                    <td><%=item.fatherName%></td>
                    <td><%=item.motherName%></td>
                    <td><%=item.fatherMobile%></td>
                    <td><%=item.motherMobile%></td>
                    <td><%=item.address%></td>
                    <td><%=item.note%></td>
                    <td><a href="/edit/:id">Edit</a></td>
                    <td><a href="/view/:id">View</a></td>
                    <td><a href="/delete/:id">Delete</a></td>
                </tr>
                <% }) %>
            </tbody>
        </div>
    </section>
        
<% include ../layout/footer%>