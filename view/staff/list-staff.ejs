<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu %>

<section class="main">
    
        <h4>List of Staff
            <a href="/staffAdd" class="btn btn-primary">Add Staff</a>
        </h4>
        <!-- <a href="/add" class="btn btn-primary">Add Student</a> -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th> Designation</th>
                    <th>Mobile</th>
                    <th>Address</th>
                    <th>Joining Date</th>
                    <th>Salary</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <% staffData.forEach((item) => { %>
                <tr>
                    <!-- This did not come from Parent table, the data came from their respctive table. I dont know if it is right or wrong -->
                    <td><%=item.fullName%></td>
                    <td><%=item.designation%></td>
                    <td><%=item.mobile%></td>
                    <td><%=item.address%></td>
                    <td><%=item.joiningDate%></td>
                    <td><%=item.salary%></td>
                    <td><a href="/editStaff/<%=item.id%>">Edit</a></td>
                    <td><a href="/staffView/<%= item.id %>">View</a></td>
                    <td><a href="/deleteStaff/<%= item.id %>" onclick="return confirm('Are you sure?');">Delete</a></td>
                </tr>
                <% }) %>
            </tbody>
        </div>
        
    </section>
    <% include ../layout/footer %>