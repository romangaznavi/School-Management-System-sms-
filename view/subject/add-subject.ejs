<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery.min.css"></script>
    <script src="js/popper.min.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
            <h1>Login Page</h1>
            <form action="/addData" method="POST" class="form-row">
                <div class="form-group col-md-6">
                    <label for="sname">Please enter subject name </label>
                    <input type="text" name="sname" class="form-control" placeholder="Name of Subject">
                </div>
    
                <div class="form-group col-md-6">
                <label for="province">Select Teacher:</label>
                    <select class="form-control" id="teacherId" name="teacherId">
                        <option value="default">Select Teacher</option>
                    <% sData.forEach((item) => { %>
                        <option value="<%=item.id%>"><%=item.fullName%></option>
                    <% }); %>
                </select>
                </div>


                <div class="form-group col-md-6">
                    <label for="subjectTeachingDay">Please enter subject teaching day </label>
                    <input type="text" name="subjectTeachingDay" class="form-control" placeholder="Subject teaching day">
                </div>

                <div class="form-group col-md-6">
                    <label for="stime">Please enter start time </label>
                    <input type="text" name="stime" class="form-control" placeholder="Start time">
                </div>

                <div class="form-group col-md-12">
                    <label for="etime">Please enter end time </label>
                    <input type="text" name="etime" class="form-control" placeholder="end time">
                </div>

                <div class="form-group col-md-6">
                    <input type="submit" value="Add subject" class="btn btn-primary">
                    <a href="/list" class="btn btn-primary">List subject</a>
                </div>
            </form>
    </div>
</body>
</html>