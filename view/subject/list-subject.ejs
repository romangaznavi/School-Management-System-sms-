<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu %>
<section class="main">
        <h4 style="text-align: center;">List of Subjects</h4>
        <!-- <a href="/add" class="btn btn-primary">Add Student</a> -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th> Teacher Name</th>
                    <th>Teaching Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <% subListData.forEach((item) => { %>
                <tr>
                    <!-- This did not come from Parent table, the data came from their respctive table. I dont know if it is right or wrong -->
                    <td><%=item.subjectName%></td>
                    <td><%=item.fullName%></td>
                    <td><%=item.subjectTeachingDay%></td>
                    <td><%=item.startTime%></td>
                    <td><%=item.endTime%></td>
                    <td><a href="/edit/:id">Edit</a></td>
                    <td><a href="/view/:id">View</a></td>
                    <td><a href="/delete/:id">Delete</a></td>
                </tr>
                <% }) %>
            </tbody>
        </div>
</table>
</section>
<% include ../layout/footer %>