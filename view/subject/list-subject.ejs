<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu %>
<section class="main">
        <% include ../layout/menu %>
        <h4 style="text-align: center;">List of Subjects</h4>
        <a href="/teacherAdd" class="btn btn-primary">Add Subject</a>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th> Teacher Name</th>
                    <th>Teaching Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th colspan="3">Action</th>
                </tr>
            </thead>

            <tbody>
                <% subListData.forEach((item) => { %>
                <tr>
                    <td><%=item.subjectName%></td>
                    <td><%=item.fullName%></td>
                    <td><%=item.subjectTeachingDay%></td>
                    <td><%=item.startTime%></td>
                    <td><%=item.endTime%></td>
                    <td><a href="/getSubjectData/<%= item.id %>">Edit</a></td>
                    <td><a href="/subjectView/<%=item.id%>">View</a></td>
                    <td><a href="/deleteSubject/<%=item.id%>" onclick="return confirm('Are you sure?');">Delete</a></td>
                </tr>
                <% }) %>
            </tbody>
           
</table>
    <nav aria-label="Page navigation example">
            <ul class="pagination"> 
                    <% for( let i =1 ; i<= totalPage; i++) {%>
                        <% if (i == 1) { %> 
                            <li class="page-item">
                                    <a class="page-link" href="/subjectList?page=<%=i%>">First</a>
                            </li>    
                        <% }%>
                        <li class="page-item">
                            <a class="page-link" href="/subjectList?page=<%=i%>"><%=i%></a>
                        </li>

                        <% if (i == totalPage) { %> 
                            <li class="page-item">
                                    <a class="page-link" href="/subjectList?page=<%=i%>">Last</a>
                            </li>    
                        <% }%>
                    <% }%>
            </ul>
          </nav>
</section>
<% include ../layout/footer %>