        <% include ../layout/header %>
        <% include ../layout/top-menu %>
        <% include ../layout/side-menu%>
        <section class="main">

                <h4 class="title">Student List
                    <a href="/add" class="btn btn-primary float-right">Add New Student</a>
                </h4>
                <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Class</th>
                                <th>Gender</th>
                                <th>Father Name</th>
                                <th>Mother Name</th>
                                <th>Father Mobile</th>
                                <th>Mother Mobile</th>
                                <th>Address</th>
                                <th>Notes</th>
                                <th colspan="3">Action</th>
                            </tr>
                        </thead>
            
                        <tbody>
                            <% studentList.forEach((item) => { %>
                            <tr>
                                <td><%=item.name%></td>
                                <td><%=item.className%></td>
                                <td><%=item.gender%></td>
                                <td><%=item.fatherName%></td>
                                <td><%=item.motherName%></td>
                                <td><%=item.fatherMobile%></td>
                                <td><%=item.motherMobile%></td>
                                <td><%=item.address%></td>
                                <td><%=item.note%></td>
                                <td><a href="/editStudent/<%=item.id%>">Edit</a></td>
                                <td><a href="/studentView/<%=item.id%>">View</a></td>
                                <td><a href="/delete/<%=item.id%>">Delete</a></td>
                            </tr>
                            <% }) %>
                        </tbody>
                        </table>
        </section>
<% include ../layout/footer%>