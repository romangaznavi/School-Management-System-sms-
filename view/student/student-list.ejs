<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu%>
<section class="main">

<h4 class="title">Student List
    <a href="/add" class="btn btn-primary float-right">Add New Student</a>
</h4>
<table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Gender</th>
                <th>Father Name</th>
                <th>Mother Name</th>
                <th>Father Mobile</th>
                <th>Mother Mobile</th>
                <th>Address</th>
                <th>Notes</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>

        <tbody>
            <% students.forEach((item) => { %>
            <tr>
                <td><%=item.name%></td>
                <td><%=item.className%></td>
                <td><%=item.gender%></td>
                <td><%=item.fatherName%></td>
                <td><%=item.motherName%></td>
                <td><%=item.fatherMobile%></td>
                <td><%=item.motherMobile%></td>
                <td><%=item.address%></td>
                <td><%=item.note%></td>
                <td><a href="/editStudent/<%=item.id%>">Edit</a></td>
                <td><a href="/studentView/<%=item.id%>">View</a></td>
                <td><a href="/deleteStudent/<%=item.id%>" onclick="return confirm('Are you sure?');">Delete</a></td>
            </tr>
            <% }) %>
        </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination"> 
                <% for(var i=1; i<=totalPageData; i++) {%> 
                    <% if(i==1) { %>
                <li class="page-item">
                        <a class="page-link" href="/?page=<%=i%>">First</a>
                </li>
                <% } %>
                <li class="page-item">
                    <a href="/?page=<%=i%>" class="page-link"><%=i%></a>
                </li>
                <% if(i==totalPageData) { %>
                    <li class="page-item">
                        <a class="page-link" href="/page?<%=i%>">Last</a>
                    </li>
                    <% } %>
                <% } %>
            </ul>
          </nav>
</section>
<% include ../layout/footer%>