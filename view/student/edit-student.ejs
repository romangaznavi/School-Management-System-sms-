<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.min.css"></script>
    <script src="/js/popper.min.js"></script>
    <title>Student Update Page</title>
</head>
<body>
    <div class="container">
    <h1>Edit Student Here</h1>
    <%studentData.forEach((item) => { %>
    <form action="/studentEdit/<%=item.id%>" action="POST" class="form-row">

        <div class="form-group col-md-4">
            <label for="">Your name is</label>
            <input type="text" value="<%=item.name%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Class</label>
            <input type="text" value="<%=item.className%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Gender</label>
            <input type="text" value="<%=item.gender%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Date of Birth</label>
            <input type="text" value="<%=item.dob%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Father Name</label>
            <input type="text" value="<%=item.fatherName%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Mother Name</label>
            <input type="text" value="<%=item.motherName%>" class="form-control">
        </div>

        <div class="form-group">
            <input type="submit" value="Update Student" class="btn btn-primary">
        </div>

    </form>   
    <% }); %>     
    </div>
</body>
</html>