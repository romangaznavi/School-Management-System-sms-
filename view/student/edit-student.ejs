    <% include ../layout/header %>
    <% include ../layout/top-menu%>
    <% include ../layout/side-menu%>
    <section class="main">
    <h1>Edit Student Here</h1>
    <%studentData.forEach((item) => { %>
    <form action="/updateStudent/<%=item.id%>" method="POST" class="form-row">

        <div class="form-group col-md-4">
            <label for="">Full Name: </label>
            <input type="text" name="name" value="<%=item.name%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Select Class</label>
            <select name="classN" id="" class="form-control">
                <option value="<%=item.id%>"><%=item.className%></option>
            </select>
        </div>

        <div class="form-group col-md-4">
            <label for="">Gender</label>
            <select name="gender" id="" class="form-control">
                <% if(item.gender == "male") { %>
                    <option value="male" selected>">Male</option>
                    <option value="female">Female</option>
                    <% } else { %>
                    <option value="male">Male</option>
                    <option value="female" selected>Female</option>
                <% } %>
            </select>
        </div>

        <div class="form-group col-md-4">
            <label for="">Father Name:</label>
            <input type="text" name="fname" value="<%=item.fatherName%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Mother Name:</label>
            <input type="text" name="mname" value="<%=item.motherName%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Father Mobile</label>
            <input type="text" name="fmobile" value="<%=item.fatherMobile%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Mother Mobile</label>
            <input type="text" name="mmobile" value="<%=item.motherMobile%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Address:</label>
            <input type="text" name="address" value="<%=item.address%>" class="form-control">
        </div>

        <div class="form-group col-md-4">
            <label for="">Notes</label>
            <input type="text" name="notes" value="<%=item.note%>" class="form-control">
        </div>

        <div class="form-group">
            <input type="submit" name="submit" value="Update Student" class="btn btn-primary">
        </div>

    </form>   
    <% }); %>  
</section>