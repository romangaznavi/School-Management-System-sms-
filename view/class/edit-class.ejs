
<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu %>
        <section class="main">
            <h4>Edit Class</h4>

            <form action="/updateClass/<%=classInfoResult.id%>" method="POST" class="form-row">
            <div class="form-group col-md-4">
                    <label for="classNumber">Select Class</label>
                    <select name="className" id="" class="form-control">
                        <option value="">Select an item</option>
                        <%classData.forEach((item) => { %>
                            <% if(item.toLocaleLowerCase() == classInfoResult.className) { %>
                            <option value="<%=item.toLocaleLowerCase()%>" selected><%=item%></option>
                            <% } %>
                            <option value="<%=item.toLocaleLowerCase()%>"><%=item %></option>
                            <% }) %>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label for="teacher">Select Teacher</label>
                    <select name="teacherName" id="" class="form-control">
                        <option value="">Select an item</option>
                        <%teachers.forEach((item) => { %>
                            <% if(item.fullName == classInfoResult.fullName) { %>
                        <option value="<%=item.id%>" selected><%=item.fullName%></option>
                            <% } %>
                        <option value="<%=item.id%>"><%=item.fullName%></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label for="subject">Select Subject</label>
                    <select name="subjectName" id="" class="form-control">
                        <option value="">Select an item</option>
                        <%subjects.forEach((item) => { %>
                            <% if(item.subjectName == classInfoResult.subjectName) { %>
                        <option value="<%=item.id%>" selected><%= item.subjectName %></option>
                        <% } %>
                        <option value="<%=item.id%>"><%= item.subjectName %></option>
                        <%})%>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update Class" class="btn btn-primary">
                </div>
            </form>
        </section>

        <% include ../layout/footer %>