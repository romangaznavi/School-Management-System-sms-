        <section class="main">
        <h4>View Class
           <span style="float: right; padding-bottom: 30px;"><a href="/listClas" class="btn btn-primary">List Class</a></span>
        </h4>
        <table class="table table-striped table-bordered">
            <thead>
                    <% classViewData.forEach((item) => { %>
                <tbody>
                <tr>
                    <tr><th>Class</th> <td><%=item.className%></td></tr>
                    <tr><th>Teacher Name</th> <td><%=item.fullName%></td></tr>
                    <tr><th>Subject Name</th> <td><%=item.subjectName%></td></tr>
                    <% }) %>
                </tr>
                </tbody>
            </thead>
    </table>
</section>

