
<% include ../layout/header %>
<% include ../layout/top-menu %>
<% include ../layout/side-menu %>
        <section class="main">
            <h4>Add Class</h4>
            <form action="/addClass" method="POST" class="form-row">
                <div class="form-group col-md-4">
                    <label for="classNumber">Select Class</label>
                    <select name="className" id="" class="form-control">
                        <option value="">Select Class</option>
                        <option value="one">First</option>
                        <option value="second">Second</option>
                        <option value="third">Third</option>
                        <option value="fourth">Fourth</option>
                        <option value="fifth">Fifth</option>
                        <option value="sixth">Sixth</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label for="teacher">Select Teacher</label>
                    <select name="teacherName" id="" class="form-control">
                        <option value="default">Select Teacher</option>
                        <%teachersResult.forEach((item) => { %>
                        <option value="<%=item.id%>"><%=item.fullName%></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <label for="subject">Select Subject</label>
                    <select name="subjectName" id="" class="form-control">
                        <option value="default">Select Subject</option>
                        <%subjectsResult.forEach((item) => { %>
                        <option value="<%=item.id%>"><%= item.subjectName %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Class" class="btn btn-primary">
                </div>
    
            </form>
        </section>

        <% include ../layout/footer %>